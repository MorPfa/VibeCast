<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_widget"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/weather_widget_background"
        app:cardCornerRadius="38dp"
        app:cardElevation="2dp"
        app:contentPadding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
       >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/air_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/air_quality"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <GridLayout
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4">

            <!-- Row 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feels_like"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_columnWeight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_speed"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_columnWeight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visibility"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <!-- Row 2 -->
            <TextView
                android:id="@+id/feels_like_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feels_like_value"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/wind_speed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_speed_value"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/visibility_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visibility_value"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <!-- Row 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chance_of_rain"
                android:paddingTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uv_index"
                android:paddingTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity_title"
                android:paddingTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <!-- Row 4 -->
            <TextView
                android:id="@+id/chance_of_rain_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chance_of_rain_value"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/uv_index_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uv_index_value"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/humidty_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/humidity"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:layout_columnWeight="1" />
        </GridLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>

