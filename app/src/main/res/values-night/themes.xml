<resources >
    <!-- Base application theme. -->
    <style name="Theme.VibeCast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="iconTint">#BCFFFFFF</item>
    </style>

    <style name="NavDrawerTheme" parent="Theme.VibeCast">
        <item name="android:textSize">@dimen/nav_item_textsize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavDrawerHeaderTheme" parent="Theme.VibeCast">
        <item name="android:textSize">@dimen/nav_item_textsize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/black</item>

    </style>
    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ActionBar">
        <item name="background">@drawable/app_bar_background</item>
    </style>

    <style name="SwitchTheme">

        <item name="colorAccent">#181819</item>

    </style>


    <style name="Theme.VibeCast.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.VibeCast.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.Theme.VibeCast" parent="Theme.Material3.DayNight.NoActionBar">

    </style>
</resources>
