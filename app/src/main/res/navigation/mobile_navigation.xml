<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">


    <fragment
        android:id="@+id/nav_home"
        android:name="app.vibecast.presentation.CurrentLocationFragment"
        tools:layout="@layout/fragment_current_location" >

        <action
            android:id="@+id/action_nav_home_to_savedLocationFragment"
            app:destination="@id/savedLocationFragment" />
    </fragment>


<fragment
        android:id="@+id/nav_account"
        android:name="app.vibecast.presentation.navigation.AccountFragment"
        tools:layout="@layout/fragment_account">

</fragment>


    <fragment
        android:id="@+id/nav_pictures"
        android:name="app.vibecast.presentation.navigation.GalleryFragment"
        tools:layout="@layout/fragment_pictures" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="app.vibecast.presentation.navigation.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/savedLocationFragment"
        android:name="app.vibecast.presentation.SavedLocationFragment"
        android:label="fragment_saved_location"
        tools:layout="@layout/fragment_saved_location" />

</navigation>